<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="700px" />
      <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
      Created By: <br />
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" /> <%=
      blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <h3>Comments (<%= comments.length %>)</h3>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
            required
          />
          <button class="btn btn-sm btn-primary mt-1" type="submit">Add</button>
        </div>
      </form>

      <% } %>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div class="card mb-2 shadow-sm">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <img src="<%= comment.createdBy.profileImageURL %>" alt="User Image" class="rounded-circle me-3" width="30" height="30">
              <h6 class="card-title"><%= comment.createdBy.fullName %></h6>
            </div>
            <hr />
            <div class="px-2">
              <p class="card-text"><%= comment.content %></p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      

    <%- include('./partials/scripts') %>
  </body>
</html>
